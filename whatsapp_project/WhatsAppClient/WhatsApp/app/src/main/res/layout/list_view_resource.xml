<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:id="@+id/message_container" android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginBottom="3dp"
        android:orientation="vertical"
        android:id="@+id/message_container_wrapper"
        >
        <RelativeLayout
            android:id="@+id/group_message_sender_name_wrapper"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="something"
                android:id="@+id/group_message_sender_name_container"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:padding="4dp"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/message_wrapper"
                android:minWidth="150dp"
                android:maxWidth="165dp"
                android:textSize="16dp"
                android:text="message"
                android:layout_marginRight="1dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/message_read_ticks"
                android:src="@drawable/ic_done_black_24dp"
                android:layout_marginRight="1dp"
                android:layout_alignParentRight="true"
                 />

            <ImageView
                android:id="@+id/generic_user_chat_photo"
                android:visibility="gone"
                android:layout_below="@id/message_wrapper"
                android:layout_width="170dp"
                android:layout_height="170dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/message_time_wrapper"

                android:text="time" android:gravity="left"
                android:layout_below="@+id/generic_user_chat_photo"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>